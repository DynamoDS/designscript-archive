<UserControl x:Class="DesignScript.Editor.RuggedProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Visibility="Collapsed" Width="162" Height="22">
    <Grid>
        <Canvas x:Name="ProgressBarCanvas" Width="128" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Canvas.Clip>
                <RectangleGeometry Rect="0,0,128,20"></RectangleGeometry>
            </Canvas.Clip>
            <Image x:Name="ProgressBarImage" Width="128" Source="/DesignScript.Editor.Ui;component/Resources/status-progress.png"></Image>
        </Canvas>
    </Grid>
</UserControl>
