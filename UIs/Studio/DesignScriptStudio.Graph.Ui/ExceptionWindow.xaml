<Window x:Class="DesignScriptStudio.Graph.Ui.ExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ExceptionWindow" Height="480" Width="640" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="24" FontWeight="Bold" Margin="4">Darn, something went wrong...</TextBlock>
        <TextBox Grid.Row="1" x:Name="CallStackInfo" Margin="4" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"></TextBox>
        <Button x:Name="CloseButton" Grid.Row="2" Width="96" Margin="4" HorizontalAlignment="Right">OK, I get it.</Button>
    </Grid>
</Window>
