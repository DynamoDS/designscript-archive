<Window x:Class="DesignScriptStudio.Graph.Ui.IntroVideoPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Introduction to DesignScript" Height="593" Width="1000">

    <Grid>
        <MediaElement HorizontalAlignment="Left" Name="mediaElement" VerticalAlignment="Top" Margin="-2,0,0,0" 
                      MouseLeftButtonDown="OnMediaElementMouseLeftButtonDown" MediaEnded="OnMediaElementMediaEnded" />
        <StackPanel x:Name="ButtonPanel" Orientation="Horizontal" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Visibility="Collapsed">
            <Image x:Name="PrevButton" Margin="5" Source="/DesignScriptStudio.Graph.Ui;component/Resources/intro_prev.png" Width="64"></Image>
            <Image x:Name="NextButton" Margin="0,5,5,5" Source="/DesignScriptStudio.Graph.Ui;component/Resources/intro_next.png" Width="64"></Image>
        </StackPanel>
    </Grid>

</Window>
